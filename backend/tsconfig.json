{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "src",
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "types": ["jest", "node"]
    },
    "include": ["src/**/*.ts", "src/server.ts", "**/*.test.ts", "**/*.spec.ts", "jest.config.ts"],
    "exclude": ["node_modules", "dist"]
}