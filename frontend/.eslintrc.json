{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["@typescript-eslint", "prettier", "react"],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "rules": {
    "prettier/prettier": "error", // Treat Prettier formatting issues as ESLint errors
    "@typescript-eslint/explicit-module-boundary-types": "off", // Optional: Turn off specific rule
    "@typescript-eslint/no-require-imports": "off",
    "@typescript-eslint/no-unused-vars": "warn", // Optional: Enable TypeScript-specific linting rules
    "no-console": "warn", // Optional: Show a warning for console.log statements
    "quotes": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  }
}
